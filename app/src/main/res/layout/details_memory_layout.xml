<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="wrap_content"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  android:maxHeight="1000dp">

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/titleTextSize"
			android:text="@string/memory_details"
			android:gravity="center"
			android:textColor="@color/black"
			android:layout_margin="@dimen/marginSize"
			tools:ignore="SpUsage">
	</TextView>

	<LinearLayout
			android:id="@+id/linear"
			android:layout_width="550dp"
			android:layout_height="@dimen/bar"
			android:orientation="horizontal"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp">
		<TextView
				android:id="@+id/memory_details_color"
				android:layout_width="0dp"
				android:layout_height="@dimen/bar"
				tools:ignore="SpUsage,Suspicious0dp"
				android:background="@color/blue">
		</TextView>
		<TextView
				android:id="@+id/memory_details_text"
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textColor="@color/black"
				android:textSize="@dimen/itemTextSize"
				android:text="0%"
				tools:ignore="HardcodedText,SpUsage">
		</TextView>
	</LinearLayout>
	<LinearLayout
				  android:layout_width="match_parent"
				  android:layout_height="wrap_content"
				  android:orientation="horizontal">
		<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="PID"
				tools:ignore="HardcodedText,SpUsage"
				android:textColor="@color/black"
				android:textSize="@dimen/itemTextSize"
				android:gravity="center">
		</TextView>
		<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="首地址"
				tools:ignore="HardcodedText,SpUsage"
				android:textColor="@color/black"
				android:textSize="@dimen/itemTextSize"
				android:gravity="center">
		</TextView>
		<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:text="尾巴地址"
				tools:ignore="HardcodedText,SpUsage"
				android:textColor="@color/black"
				android:textSize="@dimen/itemTextSize"
				android:gravity="center">
		</TextView>
	</LinearLayout>
	<ListView
			android:id="@+id/memory_details_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp">
	</ListView>
</LinearLayout>
